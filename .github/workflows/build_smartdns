name: Build SmartDNS OpenWrt (official script)

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Install build dependencies
        run: |
          sudo apt update
          sudo apt install -y make g++ git unzip wget curl libtool \
            build-essential autoconf automake pkg-config \
            libssl-dev zlib1g-dev

      - name: Run build-pkg.sh for x86_64
        run: |
          cd package
          chmod +x build-pkg.sh
          ./build-pkg.sh --type openwrt --arch x86_64

      - name: Upload result
        uses: actions/upload-artifact@v3
        with:
          name: smartdns-ipk
          path: package/output/openwrt/x86_64/*.ipk
