name: Build SmartDNS for OpenWrt x86_64 and Release

on:
  workflow_dispatch:
    inputs:
      tag:
        description: 'Release tag name (e.g., v2025.04.24)'
        required: true

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Install dependencies
        run: |
          sudo apt-get update
          sudo apt-get install -y build-essential clang flex bison g++ gawk \
            gcc-multilib g++-multilib gettext libncurses-dev libssl-dev \
            python3-distutils rsync unzip zlib1g-dev file wget

      - name: Download OpenWrt SDK (x86_64)
        run: |
          wget https://downloads.openwrt.org/releases/22.03.5/targets/x86/64/openwrt-sdk-22.03.5-x86-64_gcc-11.2.0_musl.Linux-x86_64.tar.xz
          tar -xf openwrt-sdk-*.tar.xz
          mv openwrt-sdk-* openwrt-sdk

      - name: Clone SmartDNS into SDK package directory
        run: |
          cd openwrt-sdk/package
          git clone https://github.com/${{ github.repository }} smartdns
          cd ../..

      - name: Build SmartDNS
        run: |
          cd openwrt-sdk
          echo "src-git packages https://git.openwrt.org/feed/packages.git" >> feeds.conf.default
          ./scripts/feeds update -a
          ./scripts/feeds install -a
          make defconfig
          make package/smartdns/compile V=s -j$(nproc)

      - name: Rename output for release
        run: |
          mkdir -p output
          find openwrt-sdk/bin/packages/x86_64 -name "smartdns_*.ipk" -exec cp {} output/ \;

      - name: Upload to GitHub Release
        uses: softprops/action-gh-release@v1
        with:
          tag_name: ${{ github.event.inputs.tag }}
          name: SmartDNS for OpenWrt x86_64 - ${{ github.event.inputs.tag }}
          body: |
            自动构建发布的 SmartDNS OpenWrt x86_64 包。
            - 源仓库：${{ github.repository }}
            - 构建时间：${{ github.run_started_at }}
          files: output/*.ipk
